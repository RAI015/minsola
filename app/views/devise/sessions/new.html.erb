<% provide :title, 'ログイン' %>

<div class="container user_form">
  <%= render "devise/shared/notice_alert" %>
  <h2 class="form_title">ログイン</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :email, 'メールアドレス' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', required: 'required' %>
    </div>

    <div class="form-group">
      <%= f.label :password, 'パスワード' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', required: 'required', minlength: '8' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, '次回から自動的にログイン' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit 'ログイン', class: 'btn btn-primary user_form_btn' %>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |g| %>
    <%= g.hidden_field :email, value: 'guest@example.com' %>
    <%= g.hidden_field :password, value: '12345678' %>
    <%= g.submit "かんたんログイン", class: 'btn btn-warning mb-3 user_form_btn' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>